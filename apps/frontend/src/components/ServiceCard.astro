---
interface Props {
  title: string;
  description: string;
  icon: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<div class="flex h-full flex-col rounded-lg border bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
  <div class="flex h-12 w-12 items-center justify-center rounded-full bg-brand-green/10 text-brand-green">
    <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current" aria-hidden="true">
      <path d={icon}></path>
    </svg>
  </div>
  <h3 class="mt-4 text-lg font-semibold text-slate-900">{title}</h3>
  <p class="mt-3 text-sm leading-6 text-slate-600">{description}</p>
  {
    href && (
      <a href={href} class="mt-auto pt-4 text-sm font-medium text-brand-green hover:text-brand-green-dark">
        Meer informatie
      </a>
    )
  }
</div>
